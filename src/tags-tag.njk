---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
  addAllPagesToCollections: true
layout: base.njk
permalink: /tags/{{ tag | slugify }}/
eleventyComputed:
  title: Posts tagged "{{ tag }}"
---

<!-- Hero -->
<section class="text-center py-12 mb-8">
  <h1 class="text-4xl md:text-5xl font-bold mb-4">
    <span class="bg-gradient-to-r from-sky-600 to-purple-600 bg-clip-text text-transparent">#{{ tag }}</span>
  </h1>
  <p class="text-lg text-slate-600 dark:text-slate-400">
    All posts tagged with "{{ tag }}"
  </p>
</section>

{% set postslist = collections.posts | getByTag(tag) %}

<div class="max-w-3xl mx-auto space-y-0">
  {% for post in postslist %}
  <article class="post-card card-hover">
    <div class="flex items-start justify-between gap-4">
      <div class="flex-1">
        <h2 class="post-card-title mb-3">
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h2>
        
        {% if post.data.description %}
        <p class="text-slate-600 dark:text-slate-400 mb-4 line-clamp-2">{{ post.data.description }}</p>
        {% endif %}
        
        <div class="flex flex-wrap items-center gap-3 text-sm">
          <time datetime="{{ post.date | htmlDateString }}" class="text-slate-500 dark:text-slate-500 flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            {{ post.date | readableDate }}
          </time>
          
          {% if post.data.tags %}
            <span class="text-slate-300 dark:text-slate-600">â€¢</span>
            {% for t in post.data.tags %}
              {% if t != "posts" %}
              <a href="/tags/{{ t | slugify }}/" class="tag text-xs{% if t == tag %} bg-sky-200 dark:bg-sky-800{% endif %}">#{{ t }}</a>
              {% endif %}
            {% endfor %}
          {% endif %}
        </div>
      </div>
      
      <svg class="w-4 h-4 text-slate-300 dark:text-slate-600 group-hover:text-sky-500 group-hover:translate-x-1 transition-all flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </div>
  </article>
  {% endfor %}
</div>

<!-- Navigation -->
<div class="mt-12 flex justify-center gap-4">
  <a href="/tags/" class="btn bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 hover:bg-slate-200 dark:hover:bg-slate-700">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
    </svg>
    All Tags
  </a>
  <a href="/" class="btn btn-primary">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
    </svg>
    Home
  </a>
</div>
